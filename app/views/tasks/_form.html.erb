<%= form_with(model: task, local: true) do |form| %>
  <%= form.hidden_field :parent_id,
    value: task.parent_id || params[:parent_id] %>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_field :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :due_date %>
    <%= form.date_select :due_date %>
  </div>

  <div class="form-group form-check">
    <%= form.check_box :done, class: 'form-check-input' %>
    <%= form.label :done, class: 'form-check-label' %>
  </div>

  <%= form.submit class: 'btn btn-primary',
    data: { disable_with: 'Salvando...' } %>

  <%= link_to 'Cancelar', tasks_path, class: 'btn btn-light' %>
<% end %>
